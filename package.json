{
  "name": "gerenciador-contas",
  "version": "1.0.0",
  "description": "Gerenciador de contas do mês com notificações por SMS e WhatsApp",
  "main": "electron/main-simples.js",
  "scripts": {
    "start": "node server-simples.js",
    "dev": "nodemon server-simples.js",
    "init-db": "node scripts/init-database.js",
    "electron": "electron .",
    "desktop": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "sqlite3": "^5.1.6",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gerenciadorcontas.app",
    "productName": "Gerenciador de Contas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "database/**/*",
      "services/**/*",
      "server.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "contas",
    "finanças",
    "notificações",
    "sms",
    "whatsapp",
    "desktop",
    "electron"
  ],
  "author": "Seu Nome",
  "license": "MIT"
}
